<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bg_radus"
    android:gravity="center|top"
    android:layoutDirection="rtl"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/imagesss"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgSex_del"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_margin="5dp"
            android:src="@drawable/woman" />


        <RelativeLayout
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="0.5dp"
                android:src="@drawable/heart"
                android:tint="#757474" />

            <TextView
                android:id="@+id/plus_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/iransans_bold"
                android:text="100"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_5sdp" />

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/textsss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/imagesss"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iransans_bold"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:justificationMode="inter_word"
            android:textColor="#000"
            android:textSize="@dimen/_12sdp"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/outSide_itemDelneveshte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textsss"
        android:layout_alignBottom="@+id/textsss"
        android:layout_toEndOf="@+id/imagesss"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />
    







</RelativeLayout>