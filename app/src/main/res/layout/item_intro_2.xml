<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/box_image_intro2"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp">
        <ImageView
            android:visibility="visible"
            android:id="@+id/intro_img_intro2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/title_intro2"
        android:layout_centerVertical="true"
        android:layout_below="@+id/box_image_intro2"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_5sdp"
        android:textAlignment="center"
        android:textColor="@color/title"
        android:textSize="@dimen/_18ssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/desc_intro2"
        android:layout_below="@+id/title_intro2"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_5sdp"
        android:textAlignment="center"
        android:textColor="@color/desc"
        android:textSize="@dimen/_12ssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>